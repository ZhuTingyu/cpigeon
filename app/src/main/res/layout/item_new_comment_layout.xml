<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_default_bg"
    android:paddingLeft="@dimen/medium_horizontal_margin"
    android:paddingRight="@dimen/medium_horizontal_margin"
    android:layout_height="56dp">

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_radius_100_solid_default_color"
        android:drawableLeft="@mipmap/ic_news_common_input"
        android:drawablePadding="@dimen/small_horizontal_margin"
        android:paddingBottom="@dimen/small_vertical_margin"
        android:paddingLeft="@dimen/big_large_horizontal_margin"
        android:paddingRight="@dimen/big_large_horizontal_margin"
        android:paddingTop="@dimen/small_vertical_margin"
        android:text="写写你的看法"
        android:textSize="@dimen/medium_text_size" />


    <ImageView
        android:id="@+id/anonymous"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/textView"
        tools:src="@drawable/ic_anonymous"/>


    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/anonymous"
        android:layout_marginRight="@dimen/big_large_horizontal_margin"
        android:drawableLeft="@mipmap/ic_new_comment"
        android:drawablePadding="@dimen/small_horizontal_margin"
        android:textSize="14dp"
        tools:text="20" />


    <TextView
        android:id="@+id/thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/comment"
        android:layout_marginRight="@dimen/big_large_horizontal_margin"
        android:drawableLeft="@mipmap/ic_thumbs_not_up"
        android:drawablePadding="@dimen/small_horizontal_margin"
        android:textSize="14dp"
        tools:text="20" />




</RelativeLayout>
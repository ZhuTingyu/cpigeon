<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="@dimen/dp_sign_box_size_1"
                android:layout_height="@dimen/dp_sign_box_size_1"
                android:src="@mipmap/ic_gray_box_1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_1"
                android:layout_width="@dimen/dp_sign_box_size_1"
                android:layout_height="@dimen/dp_sign_box_size_1"
                android:src="@drawable/ic_gif_sign_box"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="@dimen/dp_sign_box_size_2"
                android:layout_height="@dimen/dp_sign_box_size_2"
                android:src="@mipmap/ic_gray_box_1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_2"
                android:layout_width="@dimen/dp_sign_box_size_2"
                android:layout_height="@dimen/dp_sign_box_size_2"
                android:src="@drawable/ic_gif_sign_box"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="@dimen/dp_sign_box_size_3"
                android:layout_height="@dimen/dp_sign_box_size_3"
                android:src="@mipmap/ic_gray_box_1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_3"
                android:layout_width="@dimen/dp_sign_box_size_3"
                android:layout_height="@dimen/dp_sign_box_size_3"
                android:src="@drawable/ic_gif_sign_box"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="@dimen/dp_sign_box_size_4"
                android:layout_height="@dimen/dp_sign_box_size_4"
                android:src="@mipmap/ic_gray_box_1" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_4"
                android:layout_width="@dimen/dp_sign_box_size_4"
                android:layout_height="@dimen/dp_sign_box_size_4"
                android:src="@drawable/ic_gif_sign_box"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/top"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/top_gif"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="visible"
            android:src="@drawable/ic_gif_sign_top" />

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:src="@drawable/ic_sign_top" />


    </FrameLayout>



    <com.cpigeon.app.view.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendar"
        android:layout_below="@id/top"
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
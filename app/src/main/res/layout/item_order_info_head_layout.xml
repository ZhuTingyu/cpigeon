<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/big_large_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="订单详情"
            android:textColor="@color/textColor_gray"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_order_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textColor="@color/light_black"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/tv_order_number_content"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_order_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单内容"
                android:textColor="@color/light_black"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/tv_order_name_content"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_order_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textColor="@color/light_black"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/tv_order_time_content"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_order_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单价格"
                android:textColor="@color/light_black"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/tv_order_price_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/light_red"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:background="@color/color_default_bg"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cb_order_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_blue"
            android:paddingLeft="@dimen/dp_5"
            android:text="我已阅读并同意"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/tv_order_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="《中鸽网支付协议》"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/medium_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:paddingRight="24dp"
        android:paddingLeft="10dp"
        android:text="支付方式"
        android:paddingBottom="4dp"
        android:background="@color/color_default_bg"
        android:textColor="@color/textColor_gray"
        android:textSize="@dimen/medium_text_size"
        android:visibility="gone" />

</LinearLayout>
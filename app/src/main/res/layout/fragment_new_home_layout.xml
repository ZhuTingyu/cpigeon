<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/banner"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:canLoop="true"
                app:indicatorAlign="center"
                app:middle_page_cover="false"
                app:open_mz_mode="true" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/lead_list"
                android:background="@color/white"
                android:paddingBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:background="@color/line_color_f2f2f2"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/large_horizontal_margin"
                android:layout_marginEnd="@dimen/large_horizontal_margin"
                android:layout_height="0.5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/speed_news"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/ic_ad_text" />

                </LinearLayout>



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ad_list"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="@dimen/big_large_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="72dp" />


            </LinearLayout>

            <View
                android:background="@color/color_default_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_large_vertical_margin"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/news_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp" />

            <View
                android:background="@color/color_default_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_large_vertical_margin"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/dynamic_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>





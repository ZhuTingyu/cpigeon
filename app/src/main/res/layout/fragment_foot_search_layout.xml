<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_foot_search_title" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:visibility="visible"
        android:layout_below="@id/icon_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_year"
            android:textSize="@dimen/medium_text_size"
            android:text="比赛年份"
            android:layout_margin="10dp"
            android:background="@drawable/background_blue"
            android:drawableRight="@mipmap/ic_arrow_down_black"
            android:gravity="center"
            android:padding="6dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />


        <TextView
            android:id="@+id/tv_search"
            android:textSize="@dimen/medium_text_size"
            android:text="搜索"
            android:layout_margin="10dp"
            android:background="@drawable/button_primary_bg"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_search_white"
            android:padding="6dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_width="72dp"
            android:layout_height="36dp" />

        <EditText
            android:id="@+id/tv_search_content"
            android:textSize="@dimen/medium_text_size"
            android:hint="足环号码、鸽主姓名"
            android:layout_toRightOf="@id/tv_year"
            android:layout_toLeftOf="@id/tv_search"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_blue"
            android:padding="6dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_below="@id/tv_year"
            android:textSize="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/string_text_foot_search_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_look_history"
            android:textSize="@dimen/medium_text_size"
            android:text="查看以往查询记录"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/background_blue"
            android:drawableLeft="@mipmap/ic_foot_search_history"
            android:layout_below="@+id/text1"
            android:gravity="center"
            android:padding="6dp"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/tv_open"
            android:textSize="@dimen/medium_text_size"
            android:text="点击开通服务套餐"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/button_primary_bg"
            android:drawableLeft="@mipmap/ic_foot_search_open"
            android:layout_below="@+id/text1"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="56dp"
            android:text="@string/string_text_foot_search_hot_hint"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>






</LinearLayout>
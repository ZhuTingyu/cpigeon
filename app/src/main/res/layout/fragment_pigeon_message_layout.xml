<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:padding="@dimen/large_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/icon"
        android:padding="30dp"
        tools:src="@mipmap/ic_earth_quake"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/content"
        android:textSize="@dimen/medium_text_size"
        android:layout_below="@id/icon"
        android:text="1238450234852-3458923-90458230-45892-3045820-458203-458230-58203-45230-845230-458023-5823-58230-58230-58"
        android:maxLines="6"
        android:minLines="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/earth_anim"
        android:layout_below="@id/content"
        android:src="@drawable/ic_earth_quack_anim_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>


    <LinearLayout
        android:id="@+id/suns_images"
        android:layout_below="@id/content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="match_parent">

        <include
            android:id="@+id/img_layout_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            layout="@layout/item_pigeon_message_home_layout"/>

        <include
            android:id="@+id/img_layout_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/item_pigeon_message_home_layout"/>

        <include
            android:id="@+id/img_layout_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            layout="@layout/item_pigeon_message_home_layout"/>


    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/colorLayoutGray4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorLayoutGray4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:background="@color/colorWhite"
            android:padding="8dp"
            android:gravity="top|left"
            android:hint="这一刻的想法..."
            android:id="@+id/content"
            android:minLines="3"
            android:maxLength="600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:background="@color/colorWhite"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_horizontal_margin"
            android:overScrollMode="never" />
        <RelativeLayout
            android:id="@+id/rl_user_location"
            android:layout_marginTop="2dp"
            android:background="@color/colorWhite"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:text="显示地点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                app:srcCompat="@drawable/vector_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView4" />
            <TextView
                android:textSize="18sp"
                android:layout_toLeftOf="@id/imageView4"
                android:id="@+id/location"
                tool:text="1231231231"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_user_msg_visibility"
            android:background="@color/colorWhite"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:text="谁能看见"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_open"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/vector_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginRight="8dp"
                android:textSize="18sp"
                android:layout_toLeftOf="@id/iv_open"
                android:id="@+id/visibility"
                android:text="所有人可见"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>


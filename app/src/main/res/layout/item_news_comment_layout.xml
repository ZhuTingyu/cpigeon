<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/big_large_vertical_margin"
    android:layout_marginBottom="@dimen/big_large_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon"
            app:roundedCornerRadius = "2.5dp"
            android:layout_width="38dp"
            android:layout_height="38dp" />


        <TextView
            android:id="@+id/name"
            tools:text="小朱"
            android:layout_marginLeft="@dimen/medium_horizontal_margin"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/text_color_gray"
            android:layout_toRightOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            tools:text="2分钟之前"
            android:layout_below="@id/name"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/text_color_gray"
            android:layout_marginLeft="@dimen/medium_horizontal_margin"
            android:layout_toRightOf="@id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/anonymous"
            android:drawableLeft="@mipmap/ic_new_comment"
            android:drawablePadding="@dimen/small_horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            tools:text="20" />


        <TextView
            android:id="@+id/thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/comment"
            android:layout_marginRight="@dimen/big_large_horizontal_margin"
            android:drawableLeft="@mipmap/ic_thumbs_not_up"
            android:drawablePadding="@dimen/small_horizontal_margin"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            tools:text="20" />

    </RelativeLayout>
    



    <TextView
        android:id="@+id/content"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/black"
        tools:text="al;sdjkf;kgasdklfjjga;dkgja;kjghja;djgha;gj"
        android:layout_below="@id/ll1"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="@dimen/big_large_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.cpigeon.app.view.LinearLayoutForRecyclerView
        android:id="@+id/reply_list"
        android:layout_marginTop="@dimen/large_vertical_margin"
        android:layout_marginLeft="43dp"
        android:layout_below="@id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_item_racename"
            android:paddingLeft="8dp"
            android:text="无监控"
            android:layout_centerVertical="true"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/gray_m" />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/title"
            android:paddingLeft="20dp"
            android:text="登录312545"
            android:textSize="@dimen/medium_text_size" />

        <include
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/large_horizontal_margin"
            android:layout_marginRight="@dimen/large_horizontal_margin"
            android:layout_alignParentBottom="true"
            layout="@layout/item_line_view_layout"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/text1"
            android:textSize="16dp"
            android:text="收件人"
            android:layout_marginStart="10dp"
            android:textColor="@color/gray"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ic_contacts_add"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/ic_contacts_add"
            android:layout_width="24dp"
            android:layout_height="24dp" />


        <TextView
            android:id="@+id/phone_numbers"
            android:textSize="16dp"
            tools:text="1321321313131213213213123132131313"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:layout_toRightOf="@id/text1"
            android:layout_toLeftOf="@+id/ic_contacts_add"
            android:textColor="@color/gray"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </TextView>


    </RelativeLayout>



    <View
        android:id="@+id/lin1"
        android:layout_below="@+id/rl1"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_below="@+id/lin1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:id="@+id/number"
            android:textSize="12dp"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorGreen"
            tools:text="@string/string_text_select_contacts_number"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_margin="10dp"
        android:background="@drawable/background_round_white_5"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/message_content"
            android:gravity="left"
            android:maxLines="6"
            android:minLines="6"
            android:hint="短信"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ic_right"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/svg_ic_triangle_right"
            android:layout_width="32dp"
            android:layout_height="32dp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/btn_left"
        android:textSize="16dp"
        android:text="保存内容"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/rl2"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        android:background="@drawable/button_primary_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_right"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:textSize="16dp"
        android:text="点击发送"
        android:layout_below="@+id/rl2"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        android:background="@drawable/button_red_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text2"
        tools:text="@string/string_sign_info"
        android:layout_below="@+id/btn_left"
        android:textColor="@color/gray"
        android:textSize="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_modify_sign"
        android:text="修改签名"
        android:layout_below="@+id/btn_left"
        android:textColor="@color/colorGreen"
        android:layout_alignParentRight="true"
        android:textSize="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>